@model NetSolutions.Templates.Emails.AccountRegistrationSuccessful

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Registration Successful</title>
    <style>
        /* Base styles */
        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            color: #1E293B; /* neutral.DEFAULT */
            margin: 0;
            padding: 0;
            background-color: #f8fafc; /* neutral.50 */
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border: 1px solid #e2e8f0; /* neutral.200 */
            border-radius: 8px;
        }

        .header {
            text-align: center;
            padding: 20px 0;
            border-bottom: 2px solid #7c3aed; /* primary.DEFAULT */
        }

        .header img {
            max-height: 60px;
            margin-bottom: 10px;
        }

        .content {
            padding: 20px 0;
        }

        .welcome-message {
            font-size: 24px;
            font-weight: bold;
            color: #5b21b6; /* primary.700 */
            margin-bottom: 20px;
        }

        .account-info {
            background-color: #f5f3ff; /* primary.50 */
            border-left: 4px solid #7c3aed; /* primary.DEFAULT */
            padding: 15px;
            margin: 20px 0;
            border-radius: 4px;
        }

        .button {
            display: inline-block;
            background-color: #7c3aed; /* primary.DEFAULT */
            color: white;
            text-decoration: none;
            padding: 12px 24px;
            border-radius: 4px;
            font-weight: bold;
            margin: 20px 0;
        }

        .button:hover {
            background-color: #6d28d9; /* primary.600 */
        }

        .next-steps {
            background-color: #fffbeb; /* warning.50 */
            border-left: 4px solid #fbbf24; /* warning.DEFAULT */
            padding: 15px;
            margin: 20px 0;
            border-radius: 4px;
        }

        .next-steps h3 {
            color: #b45309; /* warning.700 */
            margin-top: 0;
        }

        .footer {
            text-align: center;
            padding-top: 20px;
            border-top: 1px solid #e2e8f0; /* neutral.200 */
            color: #64748b; /* neutral.500 */
            font-size: 12px;
        }

        .social-links {
            margin: 15px 0;
        }

        .social-link {
            display: inline-block;
            margin: 0 10px;
            color: #7c3aed; /* primary.DEFAULT */
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <img src="@Model.LogoUrl" alt="@Model.CompanyName Logo">
            }
            <h1>Welcome to @Model.CompanyName</h1>
        </div>

        <div class="content">
            <p class="welcome-message">Registration Successful!</p>

            <p>Hello @Model.UserName,</p>

            <p>Thank you for registering with @Model.CompanyName. Your account has been successfully created and is now ready to use.</p>

            <div class="account-info">
                <p><strong>Username:</strong> @Model.UserName</p>
                @* <p><strong>Email:</strong> @Model.UserEmail</p> *@
                <p><strong>Account Created:</strong> @Model.RegistrationDate.ToString("MMMM dd, yyyy")</p>
            </div>

            <p>To get started, click the button below to log in to your account:</p>

            <center>
                <a href="@Model.LoginUrl" class="button">Log In to Your Account</a>
            </center>

            <div class="next-steps">
                <h3>Next Steps</h3>
                <ul>
                    <li>Complete your profile by adding additional information</li>
                    <li>Explore the features and services available to you</li>
                    <li>Check out our knowledge base and FAQs for helpful resources</li>
                </ul>
            </div>

            @if (!string.IsNullOrEmpty(Model.SupportEmail))
            {
                <p>If you have any questions or need assistance, please don't hesitate to contact our support team at @Model.SupportEmail.</p>
            }

            <p>We're excited to have you on board!</p>

            <p>Best regards,<br>The @Model.CompanyName Team</p>
        </div>

        <div class="footer">
            <p>&copy; @DateTime.Now.Year @Model.CompanyName. All rights reserved.</p>

            @if (Model.SocialLinks != null && Model.SocialLinks.Any())
            {
                <div class="social-links">
                    @foreach (var link in Model.SocialLinks)
                    {
                        <a href="@link.Url" class="social-link">@link.Name</a>
                    }
                </div>
            }

            <p>
                @Model.CompanyAddress<br>
                @if (!string.IsNullOrEmpty(Model.UnsubscribeUrl))
                {
                    <a href="@Model.UnsubscribeUrl" style="color: #64748b;">Unsubscribe</a>
                }
            </p>
        </div>
    </div>
</body>
</html>